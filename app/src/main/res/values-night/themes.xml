<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShoppingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/primary_text_light</item>
        <item name="colorPrimaryVariant">@android:color/primary_text_light</item>
        <item name="colorOnPrimary">@android:color/primary_text_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/primary_text_light</item>
        <item name="colorSecondaryVariant">@android:color/primary_text_light</item>
        <item name="colorOnSecondary">@android:color/primary_text_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/primary_text_light</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/choiceChip</item>
    </style>

    <style name="choiceChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@android:color/primary_text_dark_nodisable</item>
        <item name="android:textColor">@color/chip_text_state_list</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="backgroundColor">@color/grey_one</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>